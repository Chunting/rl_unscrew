<?xml version="2.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="my_tool" params="parrent_link origin_xyz origin_rpy">
    <!-- ft-sensor -->
    <xacro:include filename="$(find rl_gazebo_sim)/urdf/ForceTorqueWithMount.urdf"/>

    <!-- add the ft-senser -->
    <joint name="${parrent_link}_ForceTorqueWithMount" type="revolute">
      <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
      <parent link="${parrent_link}"/>
      <child link="ForceTorqueWithMount"/>
      <axis xyz="0.0 0.0 1.0"/>
      <limit velocity="6.5" effort="1000" lower="0" upper="0" />  <!--This is a bugfix. Using fixed type joint causes problems with FT-sensor.-->
    </joint>

    <!-- Activate the feedback -->
    <gazebo reference="${parrent_link}_ForceTorqueWithMount">
      <provideFeedback>true</provideFeedback>
    </gazebo>
    <!-- FT sensor plugin-->    
    <gazebo>    
      <plugin name="FTsensor_controller"    filename="libgazebo_ros_ft_sensor.so">
        <updateRate>100.0</updateRate>
        <topicName>FTsensor_topic</topicName>
        <gaussianNoise>0.0</gaussianNoise>
        <jointName>${parrent_link}_ForceTorqueWithMount</jointName>
      </plugin>    
    </gazebo>

  
    <!-- Drill and mount -->
    <xacro:include filename="$(find rl_gazebo_sim)/urdf/DrillAndMountAssembly.urdf"/> 

    <!-- Add the drill to the chain -->
    <joint name="ForceTorqueWithMount_DrillAndMountAssembly" type="fixed">
      <origin xyz="0 -0.06342 0" rpy="0.0 ${pi/4} 0.0"/>
      <parent link="ForceTorqueWithMount"/>
      <child link="DrillAndMountAssembly"/>
      <axis xyz="0.0 0.0 0.0"/>
      <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>


    <!-- include the screw bit-->
    <xacro:include filename="$(find rl_gazebo_sim)/urdf/ScrewDriverBitStar.urdf"/>

    <!-- add the screw bit to the screw machine-->
    <joint name="ForceTorqueWithMount_ScrewDriverBitStar" type="revolute">
      <origin xyz="0 -0.22042 0" rpy="0 0 0" /> <!--sunken 5mm in to the bit holder -->
      <parent link="ForceTorqueWithMount"/>
      <child link="ScrewDriverBitStar"/>
      <axis xyz="0 1 0"/>
      <limit velocity="1000" effort="1" lower="-100000000" upper="100000000"/>     
      </joint>

  </xacro:macro>
</robot>

