<?xml version="2.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro"
       name="work_piece" >
    <link name="screw">
        <inertia>
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
            <mass value="0.02"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertia>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://rl_gazebo_sim/meshes/M3.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://rl_gazebo_sim/meshes/M3.STL"/>
            </geometry>
        </collision>
    </link>
    
    <link name="block">
        <inertia>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertia>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://rl_gazebo_sim/meshes/ScrewBlock.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://rl_gazebo_sim/meshes/ScrewBlock.STL"/>
            </geometry>
        </collision>
    </link>


    <joint name="screw_joint" type="revolute">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="block"/>
        <child link="screw"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="0.0" upper="0.05" effort="10.0" velocity="3"/>
    </joint>
</robot>